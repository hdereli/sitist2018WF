<mvc:View controllerName="com.huseyindereli.wfapp.controller.Main" 
    xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true" xmlns="sap.m">

	<App id="idAppControl">
		<pages>
			<Page title="{i18n>title}">

				<headerContent>
					<!--<Button press="onTasksPress" icon="sap-icon://action" tooltip="Go To Tasks" text="Go To Tasks" /> -->
				</headerContent>

				<content>
				
				<VBox alignItems="Center" class="sapUiLargeMargin ">

					<Title text="Registration Form" titleStyle="H3"/>

					<Input id="userid" placeholder="Username"/>
					<Input id="name" placeholder="Name"/>
					<Input id="surname" placeholder="Surname"/>
					<Button text="Register" press="onRegisterPress"/>

				</VBox>
				
				
				
				</content>
			</Page>
		</pages>
	</App>


</mvc:View>